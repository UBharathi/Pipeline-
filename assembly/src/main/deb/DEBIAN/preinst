#!/bin/sh
# preinst script for daisy-pipeline2
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

SYSTEM_PROPERTIES=${deb.pipeline.home}/etc/pipeline.properties
SYSTEM_PROPERTIES_2=${deb.pipeline.home}/etc/system.properties # how it used to be called

case "$1" in
    
    install|upgrade)
        
        # ---------------------------------------------------------
        # first install, upgrade or install from Config-Files state
        # ---------------------------------------------------------
        
        # backup and delete old configuration file
        
        if [ -e $SYSTEM_PROPERTIES ]; then
            mv $SYSTEM_PROPERTIES $SYSTEM_PROPERTIES.old
        elif [ -e $SYSTEM_PROPERTIES_2 ]; then
            mv $SYSTEM_PROPERTIES_2 $SYSTEM_PROPERTIES.old
        fi
        if [ -e $SYSTEM_PROPERTIES.bak ]; then
            $SYSTEM_PROPERTIES.bak $SYSTEM_PROPERTIES.bak.old
        elif [ -e $SYSTEM_PROPERTIES_2.bak ]; then
            $SYSTEM_PROPERTIES_2.bak $SYSTEM_PROPERTIES.bak.old
        fi
    ;;
   
    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
