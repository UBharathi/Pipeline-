<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:c="http://www.w3.org/ns/xproc-step"
               xmlns:html="http://www.w3.org/1999/xhtml"
               script="../../main/resources/xml/xproc/docx-to-epub3.xpl">

	<x:scenario label="test">
		<x:call step="px:docx-to-epub3.script">
			<x:option name="docx" select="resolve-uri('../resources/testWithLists_normal.docx')"/>
			<x:option name="temp-dir" select="resolve-uri($temp-dir)"/>
			<x:option name="output-dir" select="resolve-uri('result/',$temp-dir)"/>
		</x:call>
		<x:context label="the output directory">
			<x:document type="directory" base-uri="temp-dir" href="result" recursive="true"/>
		</x:context>
		<x:expect label="the output directory should contain an epub file" type="compare">
			<x:document type="inline">
				<c:directory name="result">
					<c:directory name="epub">
						<c:directory name="EPUB">
							<c:file name="document.xhtml"/>
							<c:file name="package.opf"/>
							<c:file name="toc.xhtml"/>
							<c:directory name="word">
								<c:directory name="media">
									<c:file name="image1.png"/>
								</c:directory>
							</c:directory>
						</c:directory>
						<c:directory name="META-INF">
							<c:file name="container.xml"/>
						</c:directory>
						<c:file name="mimetype"/>
					</c:directory>
					<c:file name="testWithLists_normal.epub"/>
				</c:directory>
			</x:document>
		</x:expect><!-- 
		<x:context label="the output directory">
			<x:document type="port" port="result"/>
		</x:context>
 -->
	</x:scenario>
	

</x:description>
